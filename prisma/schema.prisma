generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  email            String    @unique
  password         String
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  role             Role      @default(USER)
  address          Address?
}

type Address {
  city       String
  state      String
  line1      String
  line2      String?
  postalCode String
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}
